{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Traditional Problem Data Config",
    "description": "Traditional Problem Data Configuration object",
    "type": "object",
    "properties": {
        "judgerFile": {
            "description": "judger fileID",
            "type": "string"
        },
        "subtasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "score": {
                        "type": "number"
                    },
                    "testcases": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "input": {
                                    "type": "string"
                                },
                                "output": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "input",
                                "output"
                            ]
                        },
                        "minItems": 1
                    },
                    "depends": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "autoSkip": {
                        "type": "boolean"
                    },
                    "timeLimit": {
                        "type": "number"
                    },
                    "memoryLimit": {
                        "type": "number"
                    }
                },
                "required": [
                    "name",
                    "score",
                    "testcases",
                    "autoSkip",
                    "timeLimit",
                    "memoryLimit"
                ]
            },
            "minItems": 1
        }
    },
    "required": [
        "judgerFile",
        "subtasks"
    ]
}